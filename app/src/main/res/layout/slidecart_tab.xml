<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/slidetab2cart"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            >

            <ImageView
                android:id="@+id/slideaddcart"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/slideaddcart"

                />

            <FrameLayout
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:background="@drawable/rect_cart"
                tools:ignore="WebViewLayout"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="12dp"
                >

                <WebView
                    android:id="@+id/wvslidecart"
                    android:layout_width="20dp"
                    android:layout_height="40dp"

                    android:layout_gravity="center|right"

                    />
            </FrameLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            >

            <ImageView
                android:id="@+id/slideremovecart"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/slideremovecart"
                />

        </LinearLayout>
    </RelativeLayout>


